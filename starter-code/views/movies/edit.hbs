<div class="container">
  <br>
  <br>
  <h2>Add a New Movie</h2>
  <br>
<div class="container">
    <form action="/movies/{{movie._id}}/edit" method="post">
      <div class="form-group">
        <label for="title">Title</label>
        <input value="{{movie.title}}" class="form-control" type="text" name="title" id="title">
      </div>
      <div class="form-group">
        <label for="genre">Genre</label>
        <input value="{{movie.genre}}" class="form-control" type="text" name="genre" id="genre">
      </div>
      <div class="form-group">
        <label for="plot">Plot</label>
        <input value="{{movie.plot}}" class="form-control" type="text" name="plot" id="plot">
      </div>
      <input type="submit" value="Edit Movie" class="btn btn-primary">
    </form>
  </div>
</div>